[
  {
    "category": "Transparencia",
    "name": "OCDS válido",
    "type": "check-schema-bool"
  },
  {
    "category": "Transparencia",
    "name": "Campos completos",
    "type": "check-all-fields-rate"
  },
  {
    "category": "Transparencia",
    "name": "Secciones completas",
    "type": "check-sections-bool",
    "fields": [
      "parties",
      "buyer",
      "tender",
      "awards",
      "planning",
      "contracts"
    ]
  },
  {
    "category": "Temporalidad",
    "name": "Campos fundamentales para la temporalidad",
    "type": "check-fields-bool",
    "fields": [
      "awards.date",
      "tender.tenderPeriod.endDate",
      "tender.tenderPeriod.startDate",
      "date",
      "contracts.period.startDate"
    ]
  },
  {
    "category": "Temporalidad",
    "name": "Tiempo insuficiente de preparación de oferta",
    "type": "date-difference-bool",
    "difference":{
      "minimum": [
        {
          "conditions": {
            "parties.address.countryName": "Mexico",
            "tender.procurementMethodCaracterMxCnet": {
              "or": [
                "Nacional",
                "undefined"
              ]
            }
          },
          "value": 15
        },
        {
          "conditions": {
            "parties.address.countryName": "Mexico",
            "tender.procurementMethodCaracterMxCnet": "Internacional"
          },
          "value": 20
        }
      ]
    },
    "fields":{
      "from":"tender.tenderPeriod.startDate",
      "to": "tender.tenderPeriod.endDate"
      }
  },
  {
    "category": "Temporalidad",
    "name": "Fechas sospechosas",
    "type": "check-dates-bool",
    "fields": [
      "awards.date",
      "tender.tenderPeriod.endDate",
      "tender.tenderPeriod.startDate",
      "contracts.date",
      "contracts.period.startDate"
    ],
    "dates": [
          "1/1",
          "5/2",
          "tercer lunes de marzo",
          "19/3",
          "29/3",
          "30/3",
          "semana santa",
          "1/5",
          "1/7 (cada 6 años)",
          "16/9",
          "2/10",
          "tercer lunes de noviembre",
          "1/12",
          "12/12",
          "25/12",
          "domingo"
    ]
  },
  {
    "category": "Temporalidad",
    "name": "Duraciones larga",
    "type": "date-difference-bool",
    "difference":{
      "maximum": 1000
    },
    "fields":{
      "from":"contracts.period.startDate",
      "to": "contracts.period.endDate"
    }
  },
